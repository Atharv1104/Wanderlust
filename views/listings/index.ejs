<% layout('/layouts/boilerplate.ejs')-%>

<body>

  <h3>All Listings</h3>
  <!-- <form method="get" action="/listings/new">
      <button>Create New Listing</button>
  </form> -->
  <div class="row row-col-lg-3 row-col-md-3 row-col-sm-1">
<% for(let listing of allListings){ %>
  <div class="card" style="width: 20rem;">
   
   <img src="<%=listing.image%>" class="card-img-top" alt="image" style="height:20rem">
   <!-- <div class="card-img-overlay">a</div> -->
    <div class="card-body">
      <h5 class="card-title"><b><%=listing.title%></b></h5>
      <p class="card-text"><%=listing.description%></p>
      <p class="card-text">Location: <%=listing.location%><br>
                           Country: <%=listing.country%><br>
                           Price: &#8377;<%=listing.price.toLocaleString("en-IN")%>/Night
      </p>
      <a href="/listing/<%=listing._id%>" class="btn btn-primary">View Property</a>
    </div>
  </div>
<% } %>
</div>
  
    

</body>


