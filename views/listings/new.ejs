<% layout('/layouts/boilerplate.ejs')-%>
<body>
    
    <h2>Create New Listing</h2>
    <form method="POST" action="/listings">
        <div class="row">
            <div class="col-8 offset-2">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
        <input type="text" placeholder="Enter name" class="form-control" name="listing[title]">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">description</label>
            <textarea cols="50" rows="5" class="form-control" name="listing[description]"></textarea>

        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" placeholder="Enter image URL/link" class="form-control" name="listing[image]">

        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="listing[price]"class="form-control"  placeholder="Enter price">
    
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" placeholder="Enter country name"class="form-control"  name="listing[country]">
    
            </div>
        </div>
        
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" placeholder="Enter location" class="form-control" name="listing[location]"> 

        </div>

        <button class="btn btn-dark add-btn">Add Listing</button>
    </form>

</div>
</div>

</body>
</html>